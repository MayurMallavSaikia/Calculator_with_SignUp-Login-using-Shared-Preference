<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signinPage"
    android:background="@drawable/backgroud_app"
    android:id="@+id/signinForm">



    <TextView
        android:text = "Sign Up"
        android:layout_width="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_height = "wrap_content"
        android:id = "@+id/textviewSignin"
        android:textSize = "35dp"
        android:textColor="#556b25"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:text = "Calculator App"
        android:id = "@+id/textViewName2"
        android:layout_below = "@+id/textviewSignin"
        android:layout_gravity="center"
        android:textColor = "#1e90ff"
        android:textSize = "35dp"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:hint="Enter your Username"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textColorHint="#d02090"
        android:layout_marginHorizontal="50dp"
        android:id="@+id/edittextUser"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textViewName2"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:hint="Enter Your Phone no."
        android:textSize="16dp"
        android:inputType="phone"
        android:textColorHint="#d02090"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginHorizontal="50dp"
        android:id="@+id/edittextPhone"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/edittextUser"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:hint="Enter Your Password"
        android:textSize="16dp"
        android:textColorHint="#d02090"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginHorizontal="50dp"
        android:id="@+id/edittextPass1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/edittextPhone"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:hint="Confirm your Password"
        android:inputType="textPassword"
        android:textSize="16dp"
        android:textColorHint="#d02090"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginHorizontal="50dp"
        android:id="@+id/edittextPass2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/edittextPass1"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Register"
        android:id="@+id/buttonRegister"
        android:layout_gravity="center"
        android:layout_marginTop="55dp"
        android:layout_below="@+id/edittextPass2"
        android:layout_centerHorizontal="true"
        android:onClick="RealRegister"/>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:adjustViewBounds="true"
        android:maxWidth="50dp"
        android:maxHeight="35dp"
        android:scaleType="fitXY"
        android:layout_marginTop="175dp"
        android:src="@drawable/person" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/phone"
            android:adjustViewBounds="true"
            android:maxWidth="50dp"
            android:maxHeight="40dp"
            android:scaleType="fitXY"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="5dp"
            />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/lock"
        android:adjustViewBounds="true"
        android:maxWidth="50dp"
        android:maxHeight="40dp"
        android:scaleType="fitXY"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="5dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/lock"
            android:adjustViewBounds="true"
            android:maxWidth="50dp"
            android:maxHeight="40dp"
            android:scaleType="fitXY"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="5dp"/>







</LinearLayout>





</RelativeLayout>